_commit="4bae98d9404e551da9755a3ba5dbb64f2f76741a"
pkgname=winetricks
pkgver=20170411
pkgrel=1
pkgdesc='Script to install various redistributable runtime libraries in Wine.'
url='http://wiki.winehq.org/winetricks'
license=('LGPL')
arch=('any')
depends=('wine-staging' 'curl' 'cabextract' 'unrar' 'unzip' 'p7zip' 'xorg-xmessage')
makedepends=('git')
conflicts=('winetricks' 'bin32-winetricks')
provides=('winetricks')
source=("git://github.com/Winetricks/winetricks.git")
sha256sums=('SKIP')

pkgver() {
  cd ${pkgname}
  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

package() {
  cd ${pkgname}
  make DESTDIR="$pkgdir" install
}
